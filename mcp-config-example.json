{
  "mcpServers": {
    "agent-status": {
      "command": "python3",
      "args": ["/path/to/your/agent_status_mcp.py"],
      "env": {
        "TASK_MANAGER_HOST": "localhost",
        "TASK_MANAGER_PORT": "8080",
        "TASK_MANAGER_TIMEOUT": "30"
      },
      "disabled": false,
      "autoApprove": [
        "update_task_status",
        "get_task_status",
        "get_session_status",
        "list_running_tasks",
        "health_check"
      ]
    }
  }
}